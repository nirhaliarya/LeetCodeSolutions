//This is the Solution for the LeetCode Question (2438) Range Product Queries of Powers, in Python3 

class Solution:
    def productQueries(self, n: int, queries: List[List[int]]) -> List[int]:
        MOD = 10**9 + 7
        
        # Step 1: Build powers array
        powers = []
        bit = 0
        while n > 0:
            if n & 1:
                powers.append(1 << bit)  # 2^bit
            n >>= 1
            bit += 1
        
        # Step 2: Prefix products
        prefix = [1]
        for p in powers:
            prefix.append((prefix[-1] * p) % MOD)
        
        # Step 3: Answer queries
        ans = []
        for l, r in queries:
            total = (prefix[r+1] * pow(prefix[l], MOD-2, MOD)) % MOD
            ans.append(total)
        
        return ans
